---
import Link from "../components/Link.astro";
import MainLayout from "../layouts/MainLayout.astro";

---

<MainLayout title="Page Not Found">
    <div class="container" style={{
        display: "grid",
        placeItems: "center",
        textAlign: "center",
        gap: "var(--space-sm)"
    }}>
        <div>
            <h1 class="h1">404 Page Not Found</h1>
            <p>The page you are looking for is not here / doesn't exist...</p>
        </div>
        <Link 
            href="/"
            style="secondary"
            text="Go Home"
            icon={{
                name: "tabler:home",
                side: "right",
            }}/>
    </div>
</MainLayout>